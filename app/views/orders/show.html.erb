  <p class="text-lg mb-4 text-gray-600">Product: <%= @order.product.name %></p>
  <p class="text-lg mb-4 text-gray-600">Quantity: <%= @order.quantity %></p>
  <p class="text-lg mb-4 text-gray-600">Total Price: $<%= @order.total_price %></p>
